<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="pbSessionManage" class="com.pb.server.session.PBSessionManage"></bean>
	<bean id="pbIOHandler" class="com.pb.server.handler.PBIoHandler">
		<property name="handlers">
			<map>
				<entry key="login">
					<bean class="com.pb.server.handler.LoginHandler" />
				</entry>
				<entry key="ping">
					<bean class="com.pb.server.handler.PingHandler" />
				</entry>
				<entry key="message">
					<bean class="com.pb.server.handler.MessageHandler" />
				</entry>
			</map>
		</property>
	</bean>

</beans>